<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta   name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('style'); %>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="title">User Details</div>
        <form class="userform"  enctype="application/x-www-form-urlencoded" action="/user" method="post">
            <div class="field">
                <label for="username" class="label" >UserName</label>
                <input type="text" id="username"   name="username" class="input" required >
            </div>
            <div class="field">
                <label for="ph_number" class="label" >Ph-number</label>
                <input type="number" id="ph_number"   name="ph_number" class="input" required>
            </div>
            <div class="field">
                <label for="email" class="label" >Email</label>
                <input type="email" id="email"   name="email" class="input" required>
            </div>
            <div class="field">
                <label for="address" class="label" >Address</label>
                <input type="text"   name="address" class="input" required>
            </div>

            <div class="">
                <input type="checkbox" id="policy" required>
                <label id="policy" for="policy">I hereby agree to accept the terms and conditions for rental</label><br>
                <button type="submit" class="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
<script>
    if(window.history.replaceState){
        window.history.replaceState(null,null,window.location.href);
    }
</script>
</html>